    body
        // Adduser Form
        #addgame(class='container-fluid',style={'margin-bottom':'10px'})
            #header(style={width:'100%'})
                font#title(class="span-4",style={color:'white','font-size':'28px','text-align':'center','margin-top':'2px','margin-right':'10px',cursor:'default'}).
                    Rando Game Reviews
                input#inputTitle(class="span-4",style={height:'36px','font-size':'25px'},type='text', placeholder='Game Title')
                input#inputDateBeaten(class="span-4",style={height:'36px','font-size':'25px'},type='text', placeholder='Date Completed',readonly='readonly')
                select#inputRating(style={height:'36px',width:'200px','font-size':'25px','margin-right':'10px'},type='text', placeholder='How many stars')
                    option(disabled=true selected=true)
                    option(value='F') F
                    option(value='D-') D-
                    option(value='D') D
                    option(value='D+') D+
                    option(value='C-') C-
                    option(value='C') C
                    option(value='C+') C+
                    option(value='B-') B-
                    option(value='B') B
                    option(value='B+') B+
                    option(value='A-') A-
                    option(value='A') A
                    option(value='A+') A+
                button#btnAddGame(style={height:'36px',width:'200px','font-size':'25px'}) Add Review
        // /Adduser
        #container(style={background:'white'})
            // Gamelist
            #gamelist
                table(cellspacing="0",width='100%',style={'table-layout':'fixed'},class='table-hover')
                    thead(style={background:'#4F666E','font-size':'20px','text-align':'left',color:'white'})
                        th(style={'border-right':'1px solid black',padding:'10px',width:'35%'}) Title
                        th(style={'border-right':'1px solid black',padding:'10px',width:'40%'}) Date Completed
                        th(style={padding:'10px'}) Rating
                    tbody
            // /Gamelist
