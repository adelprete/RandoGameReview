doctype html
html

    head
        title=title
        script.
            (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
            (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
            m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
            })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

            ga('create', 'UA-60161097-1', 'auto');
            ga('send', 'pageview');
        meta(name="viewport",content="width=device-width, initial-scale=1")

    body
        // Addgame Form
        #addgame(class='container-fluid',style={'margin-bottom':'5px'})
            #header(style={'width':'100%'})
                center(class='row')
                    div(class='col-lg-2')
                        div#title Rando Game Reviews
                    div(class='col-md-10 col-lg-8',style={'margin':'auto'})
                        div(class='col-md-4')
                            input#inputTitle(type='text', placeholder='Game Title')
                        div(class='col-md-4')
                            input#inputDateBeaten(type='text', placeholder='Date Completed', readonly='readonly')
                        div(class='col-md-4')
                            select#inputRating(type='text')
                                option(value="",disabled=true selected=true) Choose a rating
                                option(value='F') F
                                option(value='D-') D-
                                option(value='D') D
                                option(value='D+') D+
                                option(value='C-') C-
                                option(value='C') C
                                option(value='C+') C+
                                option(value='B-') B-
                                option(value='B') B
                                option(value='B+') B+
                                option(value='A-') A-
                                option(value='A') A
                                option(value='A+') A+
                      div(class='col-md-2')
                            button#btnAddGame(style={height:'36px','font-size':'25px','width':'100%'}) Add Review
        // /Addgame
        #container(style={background:'white'})
            // Gamelist
            #gamelist
                table(cellspacing="0",width='100%',style={'table-layout':'fixed'},class='table-hover')
                    thead(style={background:'#4F666E','font-size':'20px','text-align':'left',color:'white'})
                        th(style={padding:'10px',width:'35%'}) Title
                        th(style={padding:'10px',width:'40%'}) Date Completed
                        th(style={padding:'10px'}) Rating
                    tbody
            // /Gamelist
        link(rel='stylesheet' href='//code.jquery.com/ui/1.11.3/themes/smoothness/jquery-ui.css')
        link(rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.2/css/bootstrap.min.css')
        script(src='http://ajax.googleapis.com/ajax/libs/jquery/2.0.3/jquery.min.js')
        script(src='//code.jquery.com/jquery-1.10.2.js')
        script(src='//code.jquery.com/ui/1.11.3/jquery-ui.js')
        script(src='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.2/js/bootstrap.min.js')
        link(rel='stylesheet', href='/stylesheets/style.css')
        script(src='/javascripts/gameslist.js')
